<Window x:Class="D03CBX_GUI_2023242.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D03CBX_GUI_2023242.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel> </local:MainWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Zenék listája" HorizontalAlignment="Center"/>
        <ListBox Grid.Column="0" Margin="0,20,0,0" ItemsSource="{Binding Records}" SelectedItem="{Binding SelectedRecord}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Title}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="0" VerticalAlignment="Bottom" DataContext="{Binding SelectedRecord}">
            <Label Content="Title" Background="LightBlue" Padding="5"/>
            <TextBox Text="{Binding Title}" Padding="5"></TextBox>
            <Button Content="Update Record"/>
        </StackPanel>

        <TextBlock Grid.Column="1" Text="Albumok listája" HorizontalAlignment="Center"/>
        <ListBox Grid.Column="1" Margin="0,20,0,0" ItemsSource="{Binding Albums}" SelectedItem="{Binding SelectedAlbum}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding AlbumName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" DataContext="{Binding SelectedAlbum}">
            <Label Content="Title" Background="LightBlue" Padding="5"/>
            <TextBox Text="{Binding Title}" Padding="5"></TextBox>
            <Button Content="Update Album"/>
        </StackPanel>

        <TextBlock Grid.Column="2" Text="Előadók listája" HorizontalAlignment="Center"/>
        <ListBox Grid.Column="2" Margin="0,20,0,0" ItemsSource="{Binding Writers}" SelectedItem="{Binding SelectedWriter}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding WriterName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" DataContext="{Binding SelectedWriter}">
            <Label Content="Name" Background="LightBlue" Padding="5"/>
            <TextBox Text="{Binding Name}" Padding="5"></TextBox>
            <Button Content="Update Writer"/>

        </StackPanel>

        <StackPanel Grid.Column="3">
            <Button Content="Create Record" Command="{Binding CreateRecordCommand}"></Button>
            <Button Content="Update Record" Command="{Binding UpdateRecordCommand}"></Button>
            <Button Content="Delete Record" Command="{Binding DeleteRecordCommand}"></Button>

            <Button Content="Create Album" Command="{Binding CreateAlbumCommand}"></Button>
            <Button Content="Update Album" Command="{Binding UpdateAlbumCommand}"></Button>
            <Button Content="Delete Album" Command="{Binding DeleteAlbumCommand}"></Button>

            <Button Content="Create Writer" Command="{Binding CreateWriterCommand}"></Button>
            <Button Content="Update Writer" Command="{Binding UpdateWriterCommand}"></Button>
            <Button Content="Delete Writer" Command="{Binding DeleteWriterCommand}"></Button>

            <Button Content="NonCrud"></Button>
        </StackPanel>
    </Grid>
</Window>
